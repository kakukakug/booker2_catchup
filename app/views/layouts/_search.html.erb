<div class='row justify-content-center p-2'>
  <%= form_with url: searches_search_path, method: :get, local:true do |f| %>
    <div class='row  p-2'>
      <div class='col-md-4'>
        <div class="form-group">
          <%= f.text_field :text, class: 'form-control search_text' %>
        </div>
      </div>
      <div class='col-md-4'>
        <div class="form-group row">
          <%= f.select :mode, [["User", "user"], ["Book", "book"]] %>
          <%= f.select :match, [["完全一致", "kanze"], ["前方一致", "zenpou"], ["後方一致", "kouhou"], ["部分一致", "bubun"]] %>
        </div>
      </div>
      <div class='col-md-1'>
        <div class="form-group">
          <%= f.submit "検索" ,class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
  <%= form_with url: searches_search_path, method: :get, local:true do |f| %>
    <div class='row  p-2'>
      <div class='col-md-4'>
        <div class="form-group">
          <%= f.text_field :tag, class: 'form-control search_tag' %>
        </div>
      </div>
      <div class='col-md-1'>
        <div class="form-group">
          <%= f.submit "タグ検索" ,class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>